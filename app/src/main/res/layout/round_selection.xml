<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/roundsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Αριθμός γύρων"
        android:textSize="12dp"

        android:textColor="@color/blackText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radiogroup_stroke"
        android:layout_marginTop="12dp"
        android:padding="5dp">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/fiveRoundsRadioBtn"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:checked="false"
                android:background="@drawable/custom_radiobutton"
                android:textColor="@drawable/custom_radiobutton_textcolor"
                android:text="5" />

            <RadioButton
                android:id="@+id/tenRoundsRadioBtn"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:checked="false"
                android:background="@drawable/custom_radiobutton"
                android:textColor="@drawable/custom_radiobutton_textcolor"
                android:text="10" />

            <RadioButton
                android:id="@+id/fifteenRoundsRadioBtn"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:checked="true"
                android:background="@drawable/custom_radiobutton"
                android:textColor="@drawable/custom_radiobutton_textcolor"
                android:text="15" />
            <RadioButton
                android:id="@+id/twentyRoundsRadioBtn"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:checked="false"
                android:background="@drawable/custom_radiobutton"
                android:textColor="@drawable/custom_radiobutton_textcolor"
                android:text="20" />
            <RadioButton
                android:id="@+id/thirtyRoundsRadioBtn"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:checked="false"
                android:background="@drawable/custom_radiobutton"
                android:textColor="@drawable/custom_radiobutton_textcolor"
                android:text="30" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>