<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/secondsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Δευτερόλεπτα"
        android:textSize="12dp"

        android:textColor="@color/blackText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radiogroup_stroke"
        android:layout_marginTop="12dp"
        android:padding="5dp">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/thirtySecRadioBtn"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:checked="false"
                android:background="@drawable/custom_radiobutton"
                android:textColor="@drawable/custom_radiobutton_textcolor"
                android:text="30" />

            <RadioButton
                android:id="@+id/fortyFiveSecRadioBtn"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:checked="false"
                android:background="@drawable/custom_radiobutton"
                android:textColor="@drawable/custom_radiobutton_textcolor"
                android:text="45" />

            <RadioButton
                android:id="@+id/sixtySecRadioBtn"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:checked="true"
                android:background="@drawable/custom_radiobutton"
                android:textColor="@drawable/custom_radiobutton_textcolor"
                android:text="60" />
            <RadioButton
                android:id="@+id/seventyFiveSecRadioBtn"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:checked="false"
                android:background="@drawable/custom_radiobutton"
                android:textColor="@drawable/custom_radiobutton_textcolor"
                android:text="75" />
            <RadioButton
                android:id="@+id/ninetySecRadioBtn"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:checked="false"
                android:background="@drawable/custom_radiobutton"
                android:textColor="@drawable/custom_radiobutton_textcolor"
                android:text="90" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>